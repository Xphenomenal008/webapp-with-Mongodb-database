<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat App</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <!-- Header Section -->
    <header class="header">
        <h1>Chat Application</h1>
        <nav class="nav">
            <% if (curruser) { %>
                <span class="user-greeting">ğŸ‘‹ Hello, <%= curruser.username %>!</span>
                <form method="post" action="/logout">
                    <button type="submit" class="btn logout">Logout</button>
                </form>
            <% } else { %>
                <a href="/signup" class="btn">Signup</a>
                <a href="/login" class="btn">Login</a>
            <% } %>
        </nav>
    </header>

    <!-- Main Chat Section -->
    <main class="chat-container">
        <div class="chat-header">
            <button class="btn add-chat">
                <a href="/newchat">+ New Chat</a>
            </button>
        </div>

        <% if (data.length === 0) { %>
            <p class="no-messages">No messages yet. Start a conversation!</p>
        <% } else { %>
            <% data.forEach((chat) => { %>
                <div class="chat-bubble">
                    <div class="chat-meta">
                        <span>ğŸ“¨ To: <strong><%= chat.to %></strong></span> |
                        <span>ğŸ“¨ From: <strong><%= chat.from %></strong></span>
                    </div>
                    
                    <p class="chat-msg"><%= chat.msg %></p>
                    
                    <p class="chat-time">
                        ğŸ•’ Sent: <%= chat.created_at ? chat.created_at.toLocaleString() : "N/A" %>
                    </p>
                    
                    <% if (chat.updated_at) { %>
                        <p class="chat-time">âœï¸ Edited: <%= chat.updated_at.toLocaleString() %></p>
                    <% } %>

                    <p class="chat-owner">ğŸ‘¤ Created by: <%= chat.owner ? chat.owner.username : "Unknown" %></p>

                    <div class="chat-actions">
                        <a href="/edit/<%= chat.id %>" class="btn edit">âœï¸ Edit</a>
                        <form method="post" action="/delete/<%= chat.id %>?_method=DELETE">
                            <button type="submit" class="btn delete">ğŸ—‘ï¸ Delete</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </main>

    <!-- Footer Section -->
    <footer class="footer">
        <p>&copy; 2025 Chat App. All rights reserved.</p>
    </footer>

</body>
</html>
